<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/login_background"
    android:layout_height="match_parent"
    tools:context="app.bosornd.fishfarm.LoginActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView_login"
        android:src="@mipmap/fish_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView_id" />

    <TextView
        android:text="아이디"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_above="@+id/editTextUsername1"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_id" />


    <EditText
        android:id="@+id/editTextUsername1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_pass"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="비밀번호"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView_pass"
        android:layout_above="@+id/editTextPassword1"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editTextPassword1"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/buttonLogin"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonLogin"
        android:text="로그인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_above="@+id/tvregist"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tvregist"
        android:gravity="center"
        android:text="가입하기"
        android:layout_marginBottom="152dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>